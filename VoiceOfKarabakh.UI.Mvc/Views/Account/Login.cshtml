@model VoiceOfKarabakh.Application.ViewModels.Account.LoginViewModel;

@{ 
    ViewData["Title"] = "Login";
}

<div id="login-row" class="row justify-content-center align-items-center">
    <div id="login-column" class="col-md-6">
        <div id="login-box" class="col-md-12">
            <form id="login-form" class="form" action="Login" method="post">
                <h3 class="text-center text-info">Login</h3>
                <div class="form-control-feedback">
                    @Html.ValidationSummary(excludePropertyErrors: true)
                </div>
                <div class="form-group">
                    <label for="username" class="text-info">Email:</label><br>
                    <input type="email" asp-for="Email" id="username" class="form-control">
                    <span>
                        @Html.ValidationMessageFor(m => m.Email)
                    </span>
                </div>
                <div class="form-group">
                    <label for="password" class="text-info">Password:</label><br>
                    <input type="password" asp-for="Password" id="password" class="form-control">
                    <span>
                        @Html.ValidationMessageFor(m => m.Password)
                    </span>
                </div>
                <div class="form-group">
                    <label asp-for="RememberMe" class="text-info"><span>Remember me</span> <span><input id="remember-me" name="remember-me" type="checkbox"></span></label><br>
                    <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                </div>
                <div id="register-link" class="text-right">
                    <a href="/Account/ResetPasswordIntent" class="text-info">Reset Password</a>
                </div>
            </form>
        </div>
    </div>
</div>