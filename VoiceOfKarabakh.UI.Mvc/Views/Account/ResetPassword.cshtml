@model VoiceOfKarabakh.Application.ViewModels.Account.ResetPasswordViewModel;

@{ 
    ViewData["Title"] = "Reset Password";
}

<div id="login-row" class="row justify-content-center align-items-center">
    <div id="login-column" class="col-md-6">
        <div id="login-box" class="col-md-12">
            <form id="login-form" class="form" action="ResetPassword" method="post">
                <h3 class="text-center text-info">Reset Password</h3>
                <div class="form-control-feedback">
                    @Html.ValidationSummary()
                </div>
                @Html.HiddenFor(m => m.Email)
                @Html.HiddenFor(m => m.Token)
                <div class="form-group">
                    <label for="password" class="text-info">Password:</label><br>
                    <input type="password" asp-for="NewPassword" id="password" class="form-control">
                    <span>
                        @Html.ValidationMessageFor(m => m.NewPassword)
                    </span>
                </div>
                <div class="form-group">
                    <label for="password" class="text-info">Retype Password:</label><br>
                    <input type="password" asp-for="ReNewPassword" id="password" class="form-control">
                    <span>
                        @Html.ValidationMessageFor(m => m.ReNewPassword)
                    </span>
                </div>

                <div class="form-group">
                    <input type="submit" name="submit" class="btn btn-info btn-md" value="Reset">
                </div>
            </form>
        </div>
    </div>
</div>