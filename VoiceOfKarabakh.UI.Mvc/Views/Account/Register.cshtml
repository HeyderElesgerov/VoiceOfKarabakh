@model VoiceOfKarabakh.Application.ViewModels.Account.RegisterViewModel;

@{ 
    ViewData["Title"] = "Register";
}

<div id="login-row" class="row justify-content-center align-items-center">
    <div id="login-column" class="col-md-6">
        <div id="login-box" class="col-md-12">
            <form id="login-form" class="form" method="post">
                <h3 class="text-center text-info">Register</h3>
                <div class="form-control-feedback">
                    @Html.ValidationSummary(excludePropertyErrors: true)
                </div>
                <div class="form-group">
                    <label for="username" class="text-info">Email:</label><br>
                    <input type="email" asp-for="Email" id="username" class="form-control">
                    <span>
                        @Html.ValidationMessageFor(m => m.Email)
                    </span>
                </div>
                <div class="form-group">
                    <label for="password" class="text-info">Password:</label><br>
                    <input type="password" asp-for="Password" id="password" class="form-control">
                    <span>
                        @Html.ValidationMessageFor(m => m.Password)
                    </span>
                </div>
                <div class="form-group">
                    <label for="password" class="text-info">Retype Password:</label><br>
                    <input type="password" asp-for="RePassword" id="password" class="form-control">
                    <span>
                        @Html.ValidationMessageFor(m => m.RePassword)
                    </span>
                </div>
                <div class="form-group">
                    <input type="submit" name="submit" class="btn btn-info btn-md" value="Register">
                </div>
            </form>
        </div>
    </div>
</div>